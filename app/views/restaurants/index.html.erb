<header id="yelp-header">Yelp</header>


	<%= link_to "Create a restaurant", new_restaurant_path %>

<section id="restaurant-list">
	<% if @restaurants.any? %>

		<% @restaurants.each do |restaurant| %>
				<h2><span class="restaurant-name"><%= restaurant.name %></span> </h2>
					<span class="amend-button"><%= link_to "Edit", edit_restaurant_path(restaurant) %></span>
					<span class="amend-button"><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></span>
					<span class="amend-button"><%= link_to "Review", new_restaurant_review_path(restaurant) %></span>
					<h4><%= pluralize restaurant.reviews.count, 'review' %></h4>
					<ul>
						<% restaurant.reviews.each do |review| %>
							<li><strong><%= review.rating %></strong> <%= review.thoughts %></li>
						<% end %>
					</ul>
			<% end%>
	<% else %>
		No restaurants yet
	<% end %>

</section>
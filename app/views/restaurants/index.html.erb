<header id="yelp-header">Yelp</header>


	<%= link_to "Create a restaurant", new_restaurant_path %>

<section id="restaurant-list">
	<% if @restaurants.any? %>

		<% @restaurants.each do |restaurant| %>
				<span class="restaurant-name"><h2><%= restaurant.name %> | <%= restaurant.cuisine %></h2></span>
				<h4 id="review-count"><%= pluralize restaurant.reviews.count, 'review' %></h4>
				<h4 id="average-rating">Average rating <%= restaurant.average_rating %> </h4>
					<span class="amend-button"><%= link_to "Edit", edit_restaurant_path(restaurant) %></span>
					<span class="amend-button"><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?' } %></span>
					<span class="amend-button"><%= link_to "Review", new_restaurant_review_path(restaurant) %></span>
					
					<div id="display-reviews">
					<ul>
						<% restaurant.reviews.each do |review| %>
							<li>
								<h5><strong><%= review.title %></strong></h5>
								<h4><strong><%= review.rating %></strong></h4>
								<p><%= review.thoughts %></p>
							</li>
						<% end %>
					</ul>
					</div>
			<% end%>
	<% else %>
		No restaurants yet
	<% end %>

</section>